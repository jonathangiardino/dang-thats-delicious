mixin storeCard(store = {})
    .store
        .store__hero
            .store__actions
                button soon
            img(src=`/uploads/${store.photo || 'store.png'}`)
            h2.title
                a(href=`/store/${store.slug}`)= store.name
        .store__details
            - const description = store.description.split(' ')
            if description.length > 25
                p= description.slice(0, 25).join(' ').concat("...")
            else 
                p= store.description